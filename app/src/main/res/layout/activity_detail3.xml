<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_detail_photo"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:contentDescription="@string/detail_photo"
            android:fontFamily="sans-serif-medium"
            android:scaleType="centerCrop"
            android:src="@drawable/main_3" />

        <TextView
            android:id="@+id/tv_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:text="BALI"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Berikut merupakan informasi Bahasa di Bali: "
            android:textSize="16sp" />

        <!-- ISI TABEL -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:stretchColumns="1">

            <TableRow android:background="#FFDDDDDD">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:maxWidth="0dp"
                    android:layout_weight="1"
                    android:text="Bahasa"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:maxWidth="0dp"
                    android:layout_weight="2"
                    android:text="Persebaran Wilayah"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:maxWidth="0dp"
                    android:layout_weight="1"
                    android:text="Bali" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:maxWidth="0dp"
                    android:layout_weight="2"
                    android:text="Bahasa Bali merupakan bahasa yang berasal dari Pulau Bali. Selain itu, bahasa Bali juga tersebar di beberapa wilayah lain, misalnya di Provinsi Nusa Tenggara Barat,  Jawa Timur, Lampung, dan Sulawesi Tenggara. Bahasa Bali juga dituturkan di Provinsi Kalimantan Tengah tepatnya Desa Basarang Jaya, Kecamatan Basarang, Kabupaten Kapuas. Bahasa Bali yang ada di Kalimantan Tengah merupakan bahasa para penduduk transmigran yang berasal dari Pulau Bali." />
            </TableRow>

            <TableRow android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:maxWidth="0dp"
                    android:layout_weight="1"
                    android:text="Jawa" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:maxWidth="0dp"
                    android:layout_weight="2"
                    android:text="Bahasa Jawa adalah bahasa yang yang berasal dari Pulau Jawa. Bahasa Jawa yang terdapat di Bali dituturkan di Kabupaten Buleleng." />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:maxWidth="0dp"
                    android:layout_weight="1"
                    android:text="Sasak Bali" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:maxWidth="0dp"
                    android:layout_weight="2"
                    android:text="Bahasa Sasak merupakan bahasa yang berasal dari Pulau Lombok, Provinsi Nusa Tenggara Barat. Bahasa Sasak hidup dan berkembang pula di daerah lain, termasuk di Provinsi Bali, yaitu di Desa Tianyar, Kecamatan Kubu, Kabupaten Karangasem dan di Desa Celukan Bawang, Kecamatan Grokgak, Kabupaten Singaraja." />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:maxWidth="0dp"
                    android:layout_weight="1"
                    android:text="Madura" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:maxWidth="0dp"
                    android:layout_weight="2"
                    android:text="Bahasa Madura merupakan bahasa yang berasal dari Pulau Madura. Bahasa ini tersebar di Provinsi Jawa Timur, Nusa Tenggara Barat, Bali, dan Kalimantan Barat. Bahasa Madura di Pulau Bali dituturkan oleh masyarakat di Desa Celukan Bawang, Kecamatan Gerokgak, Kabupaten Buleleng." />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </TableLayout>
    </LinearLayout>
</ScrollView>
